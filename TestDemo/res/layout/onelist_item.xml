<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#ff22aaff">

    <ImageView
        android:id="@+id/onelist_img"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher" 
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/onelist_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/onelist_img"
        android:text="TextView" 
        android:textSize="14sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:textColor="#ffffffff"/>

    <TextView
        android:id="@+id/onelist_likeCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/onelist_days"
        android:layout_alignBottom="@+id/onelist_days"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:text="TextView" 
        android:textColor="#ffffffff"/>

    <TextView
        android:id="@+id/onelist_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/onglist_stTime"
        android:layout_alignBottom="@+id/onglist_stTime"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/onelist_likeCount"
        android:text="TextView" 
        android:textColor="#ffffffff"/>

    <TextView
        android:id="@+id/onglist_stTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/onelist_img"
        android:layout_alignLeft="@+id/onelist_title"
        android:text="TextView"
        android:textColor="#ffffffff" 
        android:layout_marginBottom="2dp"/>

</RelativeLayout>
